      <%= form.label :sub_cons %>
      <%= form.text_field :sub_con, :required => true, placeholder: '항목을 입력하세요', class: 'subject_input' %>
    </div>

    <div class="actions d-inline">
      <%= form.submit "#{message}", class: 'create_btn' %>
    </div>
  </div>
<% end %>
